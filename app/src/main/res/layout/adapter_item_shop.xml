<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_icon_shop"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:src="@drawable/item_bread_icon"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/item_name_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_default_name"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/item_price_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_default_price"
            android:layout_below="@+id/item_name_shop"/>

        <Button
            android:id="@+id/item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:layout_above="@+id/item_name_shop"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
